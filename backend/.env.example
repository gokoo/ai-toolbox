# 服务器配置
NODE_ENV=development
PORT=3000

# 数据库配置
DATABASE_URI=mongodb://localhost:27017/ai-toolbox
DATABASE_PASSWORD=root

# JWT配置
JWT_SECRET=ai-toolbox-secret-key-for-development-only
JWT_EXPIRES_IN=90d
JWT_COOKIE_EXPIRES_IN=90

# 邮件配置
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_FROM=noreply@example.com

# AI服务配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_MODEL=gpt-4-turbo

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret
ALIYUN_OSS_BUCKET=your_aliyun_oss_bucket
ALIYUN_OSS_REGION=your_aliyun_oss_region

# 腾讯云配置
TENCENT_SECRET_ID=your_tencent_secret_id
TENCENT_SECRET_KEY=your_tencent_secret_key
TENCENT_COS_BUCKET=your_tencent_cos_bucket
TENCENT_COS_REGION=your_tencent_cos_region

# 跨域配置
CORS_ORIGIN=*

# 上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880 # 5MB

# 日志配置
LOG_LEVEL=info

# 限流配置
RATE_LIMIT_WINDOW_MS=900000 # 15分钟
RATE_LIMIT_MAX=100 # 每个IP 100次请求